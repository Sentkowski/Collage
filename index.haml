!!! 5

%head
    %meta(charset="UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %link(rel="stylesheet" type="text/css" href="styles/reset.css")
    %link(href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet")
    %link(rel="stylesheet" type="text/css" href="styles/main_styles.css")
    %script(src="javascript/jquery.js")
    %script(src="javascript/my_scripts.js")
    %title Collage Ninja

%body
    %main.page_wrapper
        %div.side_menu
            %section.welcome_section
                %header.welcome_flag.to_shrink
                    %h1.app_name Collage Ninja
                %img.dot_line.vert.left.to_fade(src="interface/line_ver.svg")
                %img.dot_line.right.vert.to_fade(src="interface/line_ver.svg")
                %img.dot_line.up.hor.to_fade(src="interface/line_hor.svg")
                %img.dot_line.down.hor.to_slide_down(src="interface/line_hor.svg")
                %section.welcome_description.to_fade
                    %h2 Put all your favorite photos together for free!
                %ol.benefit_list.to_fade
                    %li.benefit_box.to_fade
                        %div.ben_number.left
                            %p.digit 1
                        %p.ben_text Create <strong> your own </strong> layout
                    %li.benefit_box.to_fade
                        %p.ben_text Choose the photos <strong> you love </strong>
                        %div.ben_number.right
                            %p.digit 2
                    %li.benefit_box.to_fade
                        %div.ben_number.left
                            %p.digit 3
                        %p.ben_text Resize & rearrange <strong> as you wish </strong>



            %button.proceed_button
                %p.button_text Let's get started

            / Here start the instructions
            %section.instructions_section
                %h2.instruction_head It's easy
                %ul.inst_list
                    %li
                        %p.inst_step <strong> Swipe </strong> horizontally or vertically to split the canvas.
                    %li
                        %p.inst_step <strong> Tap </strong> on the plus icon to add your photo into a slot.
                    %li
                        %p.inst_step <strong> Double tap </strong> on a line to marge two photo slots or on a photo to replace it.

        / Here is the collage creation section
        %section.collage_section
            %div.collage_buttons_wrap
                %button.reset_button Reset
                %button.instructions_button Instructions
            %section.collage_main_frame
            %div.bot_buttons_wrapper
                %button.create_button Create
                %select.aspect_numbers#aspect_ratio
                    %option 16:9
                    %option 3:2
                    %option 4:3
                    %option 1:1
                    %option 2:3
                    %option 9:16

    / Loose elements
    %section.results_section
        %canvas.final_image
        %div.results_buttons
            %a(download="collage.jpg" href="")
                %button.download_button Download
            %button.back_button Return

    %img.finger_icon(src="interface/finger_icon.svg")

    %div.message
        %p.message_text All the slots have to be filled.
