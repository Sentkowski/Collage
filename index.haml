!!! 5

%head
    %meta(charset="UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %link(rel="stylesheet" type="text/css" href="styles/reset.css")
    %link(href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet")
    %link(rel="stylesheet" type="text/css" href="styles/main_styles.css")
    %script(src="javascript/jquery.js")
    %script(src="javascript/my_scripts.js")
    %title Collage Cut

%body
    %div.page_wrapper
        %div.side_menu
            %section.welcome_section
                %header.welcome_flag.to_shrink
                %img.dot_line.vert.left.to_fade(src="interface/line_vert.png")
                %img.dot_line.right.vert.to_fade(src="interface/line_vert.png")
                %img.dot_line.up.hor.to_fade(src="interface/line_hor.png")
                %img.dot_line.down.hor.to_slide_down(src="interface/line_hor.png")
                %section.welcome_description.to_fade
                    %h2 Put all your favorite photos together for free!
                %ol.benefit_list.to_fade
                    %li.benefit_box.to_fade
                        %div.ben_number.left
                            %p.digit 1
                        %p.ben_text Create <strong> your own </strong> layout
                    %li.benefit_box.to_fade
                        %p.ben_text Choose the photos <strong> you love </strong>
                        %div.ben_number.right
                            %p.digit 2
                    %li.benefit_box.to_fade
                        %div.ben_number.left
                            %p.digit 3
                        %p.ben_text Resize & rearrange <strong> as you wish </strong>



            %button.proceed_button
                %p.button_text Let's get started

            / Here start the instructions
            %section.instructions_section.to_show_flex
                %h2.to_show.instruction_head It's easy
                %ul.to_show_flex.inst_list
                    %li.to_show_flex.inst_block
                        %p.to_show.inst_step <strong> Swipe </strong> horizontally or vertically to split the canvas.
                    %li.to_show_flex.inst_block
                        %p.to_show.inst_step <strong> Tap </strong> on the plus icon to add your photo into a slot.
                    %li.to_show_flex.inst_block
                        %p.to_show.inst_step <strong> Double tap </strong> on a line to marge two photo slots or on a photo to replace it.

        / Here is the collage creation section
        %section.collage_section
            %div.collage_buttons_wrap
                %button.layouts_button Layouts
                %button.instructions_button Instructions
            %section.collage_main_frame
            %div.aspect_wrapper
                %button.aspect_name Aspect ratio
                %button.aspect_numbers 4:3
